<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="popupPane" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #dbd7e4;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.PopupController">
    <children>
        <!-- Popup Title -->
        <Label fx:id="warningTitle" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="14.0" prefHeight="32.0" prefWidth="284.0" text="Warning!!" textFill="#2c2a33">
         <font>
            <Font name="System Bold" size="22.0" />
         </font></Label>

        <!-- Warning Message -->
        <Label fx:id="warningMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="15.0" layoutY="38.0" prefHeight="50.0" prefWidth="269.0" text="This is a warning message." textFill="#2c2a33" wrapText="true">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>

        <!-- Close Button -->
        <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" layoutX="94.0" layoutY="104.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="111.0" style="-fx-background-color: #2c2a33;" text="OK" textAlignment="CENTER" textFill="#dbd7e4">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
    </children>
</AnchorPane>
