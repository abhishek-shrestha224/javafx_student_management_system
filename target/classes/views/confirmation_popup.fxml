<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="popupPane" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #dbd7e4;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.ConfirmationPopupController">
    <children>
        <!-- Popup Title -->
        <Label  alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="14.0" prefHeight="32.0" prefWidth="284.0" text="Confirm Delete?" textFill="#2c2a33">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>

        <!-- Warning Message -->
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="46.0" prefHeight="50.0" prefWidth="259.0" text="Are you sure you want to delete these record? This process cannot be undone." textAlignment="CENTER" textFill="#2c2a33" wrapText="true">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>

        <!-- Close Button -->
        <Button fx:id="noButton"  alignment="CENTER" contentDisplay="CENTER" layoutX="161.0" layoutY="105.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="68.0" style="-fx-background-color: #2c2a33;" text="No" textAlignment="CENTER" textFill="#dbd7e4">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Button fx:id="yesButton" alignment="CENTER" contentDisplay="CENTER" layoutX="70.0" layoutY="105.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="68.0" style="-fx-background-color: #2c2a33;" text="Yes" textAlignment="CENTER" textFill="#dbd7e4">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
