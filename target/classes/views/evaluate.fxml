<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="405.0" prefWidth="666.0" style="-fx-background-color: #73bdbd;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.EvaluateController">
    <children>
        <!-- Top Pane: Fixed Navigation Bar -->
        <AnchorPane fx:id="topPane" prefHeight="70.0" prefWidth="666.0" style="-fx-background-color: #808080;">
            <children>
                <Button layoutX="312.0" layoutY="17.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="126.0" text="Evaluate" textFill="#1b1919">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="173.0" layoutY="22.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="88.0" style="-fx-background-color: linear-gradient(#4A90E2, #357ABD); -fx-text-fill: white;" text="Back" />
            </children>
        </AnchorPane>

        <!-- Left Pane: Teacher Information -->
        <AnchorPane fx:id="leftPane" prefHeight="405.0" prefWidth="173.0" style="-fx-background-color: #363737;">
            <children>
                <Label layoutX="12.0" layoutY="173.0" style="-fx-text-fill: #ffffff;" text="Email: example@gmail.com" />
                <ImageView fitHeight="151.0" fitWidth="99.0" layoutX="37.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/user-icon.jpg" />
                    </image>
                    <clip>
                        <Circle centerX="49.5" centerY="49.5" radius="49.5" />
                    </clip>
                </ImageView>
                <Label layoutX="12.0" layoutY="123.0" style="-fx-text-fill: #ffffff;" text="Full Name: [Full Name]" />
                <Label layoutX="10.0" layoutY="148.0" style="-fx-text-fill: #ffffff;" text="Teacher ID: [ID]" />
            </children>
        </AnchorPane>

        <!-- Content Pane: Evaluation Form -->
        <ScrollPane fx:id="scrollPane" layoutX="173.0" layoutY="70.0" prefHeight="335.0" prefWidth="493.0" style="-fx-background-color: #73bdbd;">
            <content>
                <VBox fx:id="evaluationForm" spacing="10.0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <!-- Student Information -->
                    <VBox spacing="10.0">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Student Evaluation Form" />
                        <Label text="Student Name:" />
                        <TextField fx:id="studentNameField" promptText="Enter student name" />
                        <Label text="Student ID:" />
                        <TextField fx:id="studentIdField" promptText="Enter student ID" />
                    </VBox>

                    <!-- Feedback Section -->
                    <VBox spacing="10.0">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Feedback" />
                        <TextArea fx:id="feedbackArea" promptText="Enter feedback here..." wrapText="true" />
                    </VBox>

                    <!-- Submit Button -->
                    <VBox alignment="CENTER" spacing="20.0">
                        <Button fx:id="submitButton"  style="-fx-background-color: linear-gradient(#4A90E2, #357ABD); -fx-text-fill: white;" text="Submit Feedback" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
