<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="popupPane" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #DDDDDD; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.PopupController">
    <children>
        <!-- Popup Title -->
        <Label layoutX="20.0" layoutY="20.0" text="Warning" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Warning Message -->
        <Label fx:id="warningMessage" layoutX="20.0" layoutY="60.0" text="This is a warning message." wrapText="true" style="-fx-font-size: 14px;" />

        <!-- Close Button -->
        <Button fx:id="closeButton" layoutX="100.0" layoutY="100.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(#4A90E2, #357ABD); -fx-text-fill: white;" text="Close" />
    </children>
</AnchorPane>
