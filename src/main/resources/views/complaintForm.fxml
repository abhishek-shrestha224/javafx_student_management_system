<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="405.0" prefWidth="666.0" style="-fx-background-color: #73bdbd;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.ComplaintFormController">
    <children>
        <!-- Top Pane: Fixed Navigation Bar -->
        <AnchorPane fx:id="topPane" prefHeight="70.0" prefWidth="666.0" style="-fx-background-color: #808080;">
            <children>
                <Button layoutX="300.0" layoutY="17.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="126.0" text="Complaint Form" textFill="#1b1919">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="175.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="26.0" prefWidth="88.0" style="-fx-background-color: linear-gradient(#4A90E2, #357ABD); -fx-text-fill: white;" text="Back" />
            </children>
        </AnchorPane>

        <!-- Left Pane: Fixed Navigation Buttons -->
        <AnchorPane fx:id="leftPane" prefHeight="405.0" prefWidth="173.0" style="-fx-background-color: #363737;">
            <children>
                <Label layoutX="12.0" layoutY="173.0" style="-fx-text-fill: #ffffff;" text="Email: example@gmail.com" />
                <ImageView fitHeight="151.0" fitWidth="99.0" layoutX="37.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/user-icon.jpg" />
                    </image>
                    <clip>
                        <Circle centerX="49.5" centerY="49.5" radius="49.5" />
                    </clip>
                </ImageView>
                <Label layoutX="12.0" layoutY="123.0" style="-fx-text-fill: #ffffff;" text="Full Name: Sanjib Dhital" />
                <Label layoutX="10.0" layoutY="148.0" style="-fx-text-fill: #ffffff;" text="Student ID: 22013055" />
            </children>
        </AnchorPane>

        <!-- Content Pane: Complaint Form -->
        <AnchorPane fx:id="contentPane" layoutX="173.0" layoutY="70.0" prefHeight="335.0" prefWidth="493.0" style="-fx-background-color: #73bdbd;">
            <children>
                <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Complaint Form" />
                    <VBox prefHeight="210.0" prefWidth="469.0" spacing="10.0">
                        <Label text="Name:" />
                        <TextField fx:id="nameField" prefHeight="26.0" prefWidth="229.0" promptText="Enter your name" />
                        <Label text="Complaint:" />
                        <TextArea fx:id="complaintArea" prefRowCount="6" promptText="Enter your complaint" wrapText="true" />
                    </VBox>
                    <Button fx:id="submitButton" onAction="#handleSubmit" style="-fx-background-color: linear-gradient(#4A90E2, #357ABD); -fx-background-radius: 18; -fx-text-fill: white;" text="Submit" />
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
